<UserControl x:Class="CRMS.Views.User.CreateTicketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:CRMS.Views.User"             
             xmlns:viewModels="clr-namespace:CRMS.ViewModels.UserVM"
             xmlns:converters="clr-namespace:CRMS.Infrastructure.Converters"
             xmlns:domain="clr-namespace:CRMS.Domain.Entities;assembly=CRMS.Domain"
             mc:Ignorable="d"
             Background="Transparent"
             Height="Auto" Width="Auto">

    <UserControl.Resources>        
        <converters:PriorityToRussianConverter x:Key="PriorityToRussianConverter"/>
        <converters:PriorityToColorConverter x:Key="PriorityToColorConverter"/>

        <!-- Конвертер для FlowDocument -->
        <converters:FlowDocumentConverter x:Key="FlowDocumentConverter"/>

        <!-- Стиль для текста -->
        <Style TargetType="TextBlock" x:Key="CardTextStyle">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8"
        BorderThickness="1"
        BorderBrush="{DynamicResource MaterialDesignDivider}"
        Background="Transparent"
        Padding="10">
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <!--<ItemsControl ItemsSource="{Binding OpenTickets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type domain:Ticket}">
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                 Раскладка по ширине 
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>-->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Очередь -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Тип запроса:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"          
                          materialDesign:HintAssist.Hint="Выберите тип вашего запроса"          
                          ItemsSource="{Binding Queues}" 
                          SelectedItem="{Binding SelectedQueue}"
                          DisplayMemberPath="Name"
                          Foreground="White"
                          Margin="0,0,10,0"
                          VerticalAlignment="Center"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <!-- Приоритет -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Приоритет:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <ComboBox  Grid.Row="1" Grid.Column="1"
                           materialDesign:HintAssist.Hint="Задайте приоритет"
                           ItemsSource="{Binding Priorities}"
                           SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                           Foreground="White"
                           Margin="0,8,10,0"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4">
                                <Rectangle Width="12" Height="12" 
                                           Fill="{Binding Converter={StaticResource PriorityToColorConverter}}"
                                           Stroke="Black" StrokeThickness="0.5"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Converter={StaticResource PriorityToRussianConverter}}"
                                           Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Заявитель -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Заявитель:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         VerticalAlignment="Center"
                         Text="{Binding CurrentUser.Email}"
                         IsEnabled="False"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="White"
                         Margin="0,8,10,0"/>

                <!-- Копия заявки -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Копия заявки:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Row="3" Grid.Column="1"                         
                         VerticalAlignment="Center"
                         Text="{Binding SelectedQueue.CorrespondAddress, FallbackValue='Необходимо выбрать тип запроса!'}"
                         IsEnabled="False"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"                         
                         Foreground="White"
                         Margin="0,8,10,0"/>

                <!-- Тема заявки -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Тема заявки:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,10,0"/>
                <TextBox Grid.Row="4" Grid.Column="1"
                         materialDesign:HintAssist.Hint="Введите краткое описание вашей заявки"
                         VerticalAlignment="Center"
                         Text="{Binding Subject}" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"                         
                         Foreground="White"
                         Margin="0,8,10,0"/>

                <!-- Тело заявки -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="Содержание заявки:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,10,0"/>
                <local:RichTextEditor Grid.Row="5" Grid.Column="1"
                                      Height="250"
                                      Margin="0,8,10,0"
                                      Document="{Binding BodyDocument, Converter={StaticResource FlowDocumentConverter}, Mode=TwoWay}"
                                      SaveCommand="{Binding SaveCommand}"/>

                <!-- Вложение файлов: панель с возможностью клика и Drag&Drop -->
                <Border Grid.Row="6" Grid.ColumnSpan="2"
                        BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Padding="10" Margin="0,20,10,0"
                        HorizontalAlignment="Stretch"
                        AllowDrop="True"
                        Drop="AttachmentsDrop"
                        MouseLeftButtonUp="AttachmentsClick">
                    <StackPanel>
                        <Border CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                Background="Gray"
                                Padding="10">
                            <TextBlock Text="Перетащите файлы сюда или нажмите чтобы выбрать"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>
                        </Border>

                        <!-- Список прикреплённых файлов -->
                        <ItemsControl ItemsSource="{Binding Attachments}">

                            <ItemsControl.ItemsPanel>
                                <!-- Задаем количество строк для вложений -->
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type domain:Attachment}">
                                    <!-- Оформление одного элемента -->
                                    <StackPanel Orientation="Horizontal" Margin="6" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}" 
                                                   Foreground="White" 
                                                   VerticalAlignment="Center"/>
                                        <Button Content="×"
                                                Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Foreground="Red"
                                                ToolTip="Удалить файл"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontWeight="Bold"
                                                Margin="8,0,0,0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Суммарный размер -->
                        <TextBlock Text="{Binding AttachmentsSummary}" 
                                   Foreground="{Binding AttachmentsSummaryColor}"
                                   FontWeight="Bold"
                                   Margin="6,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка -->
                <Button Grid.Row="7" Grid.ColumnSpan="2"
                        Content="Создать заявку"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Foreground="White"
                        Margin="0 10 8 0"
                        Command="{Binding CreateNewTicketCommand}"/>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
