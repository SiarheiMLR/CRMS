<UserControl x:Class="CRMS.Views.User.CreateTicketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:CRMS.Views.User"
             xmlns:viewModels="clr-namespace:CRMS.ViewModels.UserVM"
             xmlns:converters="clr-namespace:CRMS.Infrastructure.Converters"
             xmlns:domain="clr-namespace:CRMS.Domain.Entities;assembly=CRMS.Domain"
             mc:Ignorable="d"
             Background="Transparent"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToRussianConverter x:Key="StatusToRussianConverter"/>
        <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <converters:PriorityToRussianConverter x:Key="PriorityToRussianConverter"/>
        <converters:PriorityToColorConverter x:Key="PriorityToColorConverter"/>

        <!-- Стиль для текста -->
        <Style TargetType="TextBlock" x:Key="CardTextStyle">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8"
        BorderThickness="1"
        BorderBrush="{DynamicResource MaterialDesignDivider}"
        Background="Transparent"
        Padding="10">
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <!--<ItemsControl ItemsSource="{Binding OpenTickets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type domain:Ticket}">
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                 Раскладка по ширине 
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>-->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Очередь -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Очередь:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                    materialDesign:HintAssist.Hint="Выберите группу"
                    materialDesign:HintAssist.Foreground="LightGray"
                    ItemsSource="{Binding Queues}" 
                    SelectedItem="{Binding SelectedQueue}"
                    DisplayMemberPath="Name"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                    Foreground="White"
                    BorderBrush="#AAFFFFFF"
                    Margin="0,0,0,16">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>                

                <!-- Приоритет -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Приоритет:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <ComboBox  Grid.Row="1" Grid.Column="1"
                           materialDesign:HintAssist.Hint="Задайте приоритет"
                           ItemsSource="{Binding SelectedPriority}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <!-- Заявитель -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Заявитель:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,5,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Margin="0,5,0,0"
                         VerticalAlignment="Center"
                         Text="{Binding RequestorEmail}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <!-- Cc -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Cc:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,5,10,0"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                         Margin="0,5,0,0"
                         Text="{Binding CcEmail}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <!-- Тема заявки -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Тема заявки:" 
                           VerticalAlignment="Top" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,5,10,0"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="0,5,0,0">
                    <TextBox Text="{Binding Subject}" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <!-- Toolbar imitation -->
                    <ToolBar Margin="0,5,0,0" Background="Transparent" Style="{StaticResource MaterialDesignToolBar}">
                        <ComboBox Width="80" SelectedItem="{Binding SelectedStyle}">
                            <ComboBoxItem Content="Styles"/>
                        </ComboBox>
                        <ComboBox Width="80" SelectedItem="{Binding SelectedFormat}">
                            <ComboBoxItem Content="Format"/>
                        </ComboBox>
                        <Button Content="B" FontWeight="Bold"/>
                        <Button Content="I" FontStyle="Italic"/>
                        <Button Content="U" />
                    </ToolBar>

                    <!-- Placeholder for RichTextEditor -->
                    <TextBox AcceptsReturn="True" Height="200"
                             VerticalScrollBarVisibility="Auto"
                             Text="{Binding Body}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

                <!-- Вложение файлов -->
                <Border Grid.Row="5" Grid.ColumnSpan="2"
                        BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Padding="10" Margin="0,10,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="Перетащите файлы сюда или нажмите чтобы добавить"
                               HorizontalAlignment="Center"
                               Foreground="White"/>
                </Border>

                <!-- Кнопка -->
                <Button Grid.Row="6" Grid.ColumnSpan="2"
                        Content="Создать"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Foreground="White"
                        Margin="0 10 8 0"
                        Command="{Binding CreateTicketCommand}"/>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
