<Page x:Class="CRMS.Views.Admin.Groups.GroupOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	  xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"	  
      xmlns:converters="clr-namespace:CRMS.Infrastructure.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Обзор групп пользователей"
      x:Name="rootPage">
    
        <Page.Resources>
        <converters:GroupUserToTupleConverter x:Key="GroupUserToTupleConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Page.Resources>
    <materialDesign:DialogHost Identifier="MainDialogHost">
        <StackPanel Margin="20">

            <TextBlock Text="Системные группы" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <ItemsControl ItemsSource="{Binding Groups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Name}" Margin="0 0 0 10">
                            <StackPanel>
                                <TextBlock Text="{Binding Description}" FontStyle="Italic" Margin="0 0 0 10"/>
                                <TextBlock Text="Участники:" FontWeight="Bold"/>

                                <!-- Выбор пользователя -->
                                <ListBox ItemsSource="{Binding Members}"
                                  SelectedItem="{Binding DataContext.SelectedMember, ElementName=rootPage, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  Style="{StaticResource MaterialDesignListBox}"
                                  Height="100"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="Добавить пользователя"
                                     Command="{Binding DataContext.AddUserToGroupCommand, ElementName=rootPage}"
                                     CommandParameter="{Binding}"
                                     Margin="5" />

                                    <Button Content="Удалить пользователя"
                                     Command="{Binding DataContext.RemoveUserFromGroupCommand, ElementName=rootPage}"
                                     CommandParameter="{Binding}"
                                     IsEnabled="{Binding DataContext.SelectedMember, ElementName=rootPage, Converter={StaticResource NullToBoolConverter}}"
                                     Style="{StaticResource MaterialDesignOutlinedButton}"
                                     Margin="5"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </materialDesign:DialogHost>
</Page>
