<Page x:Class="CRMS.Views.Admin.UsersOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:CRMS.ViewModels.Admin"
      xmlns:shared="clr-namespace:CRMS.Views.Shared"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Список пользователей CRMS">

    <Grid>
        <Border CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#AAFFFFFF"
                Background="#20000000"
                Padding="16"
                MaxHeight="850">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Users}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"
                                       HorizontalAlignment="Center"
                                       Margin="20"
                                       ItemWidth="260"
                                       ItemHeight="380"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.OpenUserProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="10"
                                    Width="260" Height="360"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top">
                                <shared:UserCardControl DataContext="{Binding}" Width="220" Height="260"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>                    
                </ItemsControl>
            </ScrollViewer>           
        </Border>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,20">
            <Button Command="{Binding ImportUsersCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    Margin="0 0 8 0"
                    materialDesign:ButtonAssist.CornerRadius="8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountSync" Width="20" Height="20" Margin="0,0,5,0"/>
                    <TextBlock Text="Импорт из Active Directory"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding CreateUserCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    Margin="0 0 8 0"
                    materialDesign:ButtonAssist.CornerRadius="8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountPlus" Width="20" Height="20" Margin="0,0,5,0"/>
                    <TextBlock Text="Создать пользователя"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>