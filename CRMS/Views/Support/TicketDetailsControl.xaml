<UserControl x:Class="CRMS.Views.Support.TicketDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMS.Views.Support"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="10" Background="Transparent" CornerRadius="8">
        <StackPanel Margin="10">
            <TextBlock Text="Детали заявки" FontSize="16" Margin="0,0,0,20" Foreground="White" FontWeight="Bold"/>

            <TextBlock Text="Тема"/>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Author}" />
            <TextBlock Text="{Binding Contact}" Margin="0,0,0,10"/>

            <TextBlock Text="Создана:"/>
            <TextBlock Text="{Binding CreatedAt}"/>
            <TextBlock Text="Крайний срок:"/>
            <TextBlock Text="{Binding DueDate}" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,15"/>

            <TextBlock Text="Вложения:" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Attachments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding FileName}" Margin="0,0,5,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Взять в работу" Margin="0,0,10,0"/>
                <Button Content="Изменить статус" Margin="0,0,10,0"/>
                <Button Content="Добавить комментарий"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
